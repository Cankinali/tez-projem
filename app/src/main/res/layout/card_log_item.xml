<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="4dp"
    android:background="@drawable/card_background"
    android:padding="16dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Icon and Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvLogIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍"
                android:textSize="20sp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WhatsApp"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvActionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TARAMA_BAŞLADI"
                    android:textColor="@color/accent_blue"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Time and Score -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30:25"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvThreatScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skor: 0.25"
                android:textColor="@color/status_safe"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yeni yüklenen uygulama güvenlik taraması başlatıldı"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="8dp" />

    <!-- Package Name -->
    <TextView
        android:id="@+id/tvPackageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="com.whatsapp"
        android:textColor="@color/text_tertiary"
        android:textSize="11sp"
        android:fontFamily="monospace"
        android:background="@color/bg_tertiary"
        android:padding="6dp" />

</LinearLayout>